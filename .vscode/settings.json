{
  // =====================================================================
  //  Workspace Settings for imas-standard-names
  //  Keep this file lean: only project-specific behavior.
  //  User/editor UX customizations belong in user settings instead.
  // =====================================================================

  // --- Python: analysis & interpreter ----------------------------------
  "python.analysis.typeCheckingMode": "standard", // Raise to "strict" later if desired
  "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe", // Relative venv
  "python.envFile": "${workspaceFolder}/.env", // Optional environment overrides

  // --- Python: terminal activation -------------------------------------
  // Rely on extension auto-activation. executeInFileDir false = run from workspace root.
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.activateEnvironment": true,
  "python.terminal.executeInFileDir": false,

  // --- Testing ----------------------------------------------------------
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],
  "python.testing.cwd": "${workspaceFolder}",

  // --- Spelling (project-specific domain words) ------------------------
  "cSpell.words": [
    "dotenv",
    "fastmcp",
    "genericname",
    "IMAS",
    "ipykernel",
    "logfire",
    "Maarten",
    "mkdocs",
    "mypy",
    "pydantic",
    "pytest",
    "pyyaml",
    "Sebregts",
    "standardname",
    "standardnames",
    "stellarators",
    "strictyaml",
    "syaml",
    "tokamaks",
    "UDUNITS"
  ],

  // --- Chat MCP sampling (project tool integration) --------------------
  "chat.mcp.serverSampling": {
    "imas-standard-names/.vscode/mcp.json: imas": {
      "allowedModels": ["copilot/gpt-5"],
      "allowedDuringChat": true
    }
  }
}
